}
.template-product div.content.rte ul {
  padding:0;
  margin:0;
  padding:3px 3px 3px 20px;
}
.template-product div.content.rte li {
  margin-left: 20px;
  font-size: 16px;
  margin-bottom: 5px;
  position: relative;
  padding-left: .3em;
  color: #1a1a1a;
  font-family: "Sofia Pro";
  line-height: 25px;
  list-style: none !important;
}

.template-product div.content.rte li::before, .template-product div.content.rte li::marker {
  content: "";
  position: absolute;
  top: 13px;
  left: -20px;
  width: 6px;
  height: 6px;
  background-color: #f8c130;
  border-radius: 50%;
}

.template-product div.content p {
  padding:0;
  margin:10px 0px;
  padding:3px;
}
.template-product div.content ul li {
  list-style-position:inside;
  line-height:25px;
}

/* Tabs Section */
.template-product div.content ul.tabs {
  margin-bottom: 30px;
}
  ul.tabs {
    display: block;
    margin: 0 0 20px;
    padding: 0;
    border-bottom: 1px solid #eee;
    white-space: nowrap;
    min-height: 49px;
    overflow-x: scroll;
    overflow-y: hidden;
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }
  ul.tabs::-webkit-scrollbar{
    display: none;
  }
  ul.tabs li {
    display: inline;
    height: 30px;
    margin-bottom: 0;
    padding: 0;
    width: auto;
  }
  ul.tabs li a {
    -moz-border-image: none;
    -moz-border-left-colors: none;
    -moz-border-right-colors: none;
    -moz-border-top-colors: none;
    background: none repeat scroll 0 0 #fff;
    border-bottom: 5px solid transparent;
    transition: all 300ms ease-in-out;
    //font-size: 13px;
    height: 30px;
    margin: 0;
    font-family: 'Sofia Pro';
    letter-spacing: 1px;
    padding: 0px 20px 20px;
    text-transform: uppercase;
    font-weight: 600;
    text-decoration: none;
    width: auto;
    color: #949494;
  }
  ul.tabs li a.active {
    background: none repeat scroll 0 0 #FFFFFF;
    border-bottom: 5px solid #F6C12F;
    color: #1A1A1A;
    position: relative;
  }
  ul.tabs li:first-child a.active {
    margin-left: 0;
  }

  ul.tabs:before, ul.tabs:after {
    content: " ";
    display: block;
    height: 0;
    overflow: hidden;
    visibility: hidden;
    width: 0;
  }
  ul.tabs:after {
    clear: both;
  }


