/* ACCORDION POPULATED QUICKNAV */
.accordion-quicknav {
  height: 55px;
  background: #F8F6F7;
  position: fixed;
  top: -100px;
  margin: auto;
  left: 0;
  z-index: 19;
  right: 0;
  transition: top 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  border-bottom: 1px solid rgb(229, 227, 228);
  display: flex;
}

.accordion-quicknav ul {
  display: flex;
  height: 100%;
  margin: 0px 40px;
  align-items: center;
  list-style: none;
}

.accordion-quicknav li {
  //margin-right: 30px;
  font-family: 'Sofia Pro Reg';
  font-size: 15px;
}

.accordion-quicknav li a {
  color: #1a1a1a;
  //padding: 15px;
  padding: 15px 15px 13px;
  border-bottom: 5px solid transparent;
  transition: color ease-in-out 200ms;
}

.accordion-quicknav li a.active {
  color: #F6C03F;
  //border-bottom: 5px solid #F6C03F;
}

.accordion-quicknav li a:hover {
  //color: #F6C03F;
  cursor: pointer;
}

@media screen and (max-width:768px) {
   .accordion-quicknav ul {
     white-space: nowrap;
     margin: 0px 20px;
     overflow-x: scroll;
     overflow-y: hidden;
     -ms-overflow-style: none;  /* IE and Edge */
     scrollbar-width: none;  /* Firefox */
   }
   .accordion-quicknav ul::-webkit-scrollbar{
    display: none;
  }
}

/* ACCORDIONS */
/* no bottom margin when Recently Viewed section in use - am */

.accordion-section {
  margin-top: 50px;
  /* margin-bottom: 50px; */
}

@media screen and (max-width:768px) {
  .accordion-section.page-width {
    padding: 0px;
    margin-top: 30px;
    /* margin-bottom: 30px; */
  }
}

.accordion, .accordion-review {
  margin: 0;
  padding: 30px 10px;
  border-top: #eee 1px solid;
  background: #fff;
  text-decoration:none;
  color: $color-text;
  font-size: 20px;
  font-weight: bold;
  position:relative;
}

.accordion:hover,
.accordion-review:hover {
  cursor: pointer;
}

.accordion-open {
  background:#fff;
  color: $color-text;
}

.accordion-open span.icon {
  display:block;
  position:absolute;
  right:3px;
  top:40%;
  padding:10px;
}

.accordion.opened span.icon,
.accordion-review.opened span.icon {
  background:url('{{ 'minus.svg' | asset_url }}') center center no-repeat;
}

.accordion span.icon, 
.accordion-review span.icon {
  display:block;
  position:absolute;
  right:3px;
  top:40%;
  background: url('{{ 'plus.svg' | asset_url }}') center center no-repeat;
  padding:10px;
}

.accordion-section .visely-widget-container.complete {
  padding-top: 0px !important;
}

.template-product .c-form-select-options li:before {
  display: none;
}

.template-product .c-form-select-options li {
  margin-left: 0px !important;
}

.template-product .c-form-select-options li:hover {
  cursor: pointer;
  color: #949494;
}

.template-product .accordion-section .container,
.rapid_reviews_items    {
  padding:0;
  margin:0;
  display: none;
  max-width:100%;
  padding:5px 0;
}

.template-product .accordion-section .accordion.opened-default + .container,
.template-product .accordion-section .accordion-review.opened-default ~ .rapid_reviews_items {
  display: block;
}

.template-product .accordion-section div.content.rte, .accordion-section .content > div > .product-single__description.rte {
  background:#fff;
  margin: 0;
  font-size: 16px;
  padding:0px 10px 30px 10px;
