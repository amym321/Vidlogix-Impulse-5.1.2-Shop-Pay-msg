{% comment %} code changes per 4.1.1 customization {% endcomment %}
{%- assign disable_sticky_header = false -%}

{%- if section.settings.enable -%}
  {%- if section.settings.header_type == 'image' and collection.image -%}
    <div
      id="CollectionHeaderSection"
      data-section-id="{{ section.id }}"
      data-section-type="collection-header"
      {% if section.settings.parallax %}data-parallax="true"{% endif %}>

      {%- assign img_url = collection.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

      <div class="collection-hero">

        {%- if section.settings.parallax -%}
          <div class="parallax-container">
            <div class="parallax-image">
        {%- endif -%}

          <img class="collection-hero__image image-fit lazyload"
            src=""
            data-src="{{ img_url }}"
            data-aspectratio="{{ collection.image.aspect_ratio }}"
            data-widths="[720, 900, 1080, 1800, 2400]"
            data-sizes="auto"
            alt="{{ collection.image.alt | escape }}">

          <noscript>
            <img class="collection-hero__image image-fit"
              src="{{ collection.image | img_url: '1400x' }}"
              alt="{{ collection.image.alt | escape }}">
          </noscript>

        {%- if section.settings.parallax -%}
            </div>
          </div>
        {%- endif -%}

        <div class="collection-hero__content">
          <div class="page-width">
            <header class="section-header section-header--hero">
              <div class="section-header__shadow">
                {%- render 'breadcrumbs' -%}
                <h1 class="section-header__title">
                  {{ collection.title }}
                </h1>
              </div>

              {%- if collection.description != blank -%}
                <div class="rte">
                  {{ collection.description }}
                </div>
              {%- endif -%}

            </header>
          </div>
        </div>
      </div>
    </div>

  {%- elsif section.settings.header_type == 'bar' -%}
    {% render 'smart-header' %}

  {%- else -%}
    {%- assign disable_sticky_header = true -%}
    <div class="page-width page-content page-content--top">
      <header class="section-header section-header--flush">
        {%- render 'breadcrumbs' -%}
        <h1 class="section-header__title">
          {{ collection.title }}
        </h1>

        {%- if collection.description != blank -%}
          <div class="rte">
            {{ collection.description }}
          </div>
        {%- endif -%}

      </header>
    </div>
  {%- endif -%}
{% else %}
  {%- assign disable_sticky_header = true -%}
{%- endif -%}

{%- if disable_sticky_header -%}
  {% comment %}
    Div to trigger theme.CollectionHeader JS
  {% endcomment %}
  <div
    id="CollectionHeaderSection"
    data-section-id="{{ section.id }}"
    data-section-type="collection-header">
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "Collection header",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable",
        "label": "Enable header",
        "default": true
      },

      {
        "type": "select",
        "id": "header_type",
        "label": "Header type",
        "default": "bar",
        "info": "Image type only works if a collection image is present.",
        "options": [
          {
            "value": "bar",
            "label": "Bar"
          },
          {
            "value": "standard",
            "label": "Standard"
          },
          {
            "value": "image",
            "label": "Image"
          }
        ]
      },
      
      {
        "type": "checkbox",
        "id": "parallax",
        "label": "Parallax image",
        "default": true
      }
    ]
  }
{% endschema %}
